@model DepartmentUpdateVM
@{
    ViewData["Title"] = "Update Department";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title" value="@ViewBag.Brand.Name">
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="form-group">
        <label>Logo</label><br />
        <img width="150px" src="~/imgs/brands/@ViewBag.Brand.LogoUrl" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Image">New logo</label>
        <input class="form-control" asp-for="@Model.Image">
        <span class="text-danger" asp-validation-for="@Model.Image"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

