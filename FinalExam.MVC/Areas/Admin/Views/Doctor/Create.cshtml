@model DoctorCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product Create</h6>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input class="form-control" accept="image/*" asp-for="ImageUrl">
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <input class="form-control" asp-for="DepartmentId">
                <span class="text-danger" asp-validation-for="DepartmentId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>